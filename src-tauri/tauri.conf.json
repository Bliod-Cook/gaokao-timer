{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gaokao-timer",
  "version": "0.1.0",
  "identifier": "Gaokao-Timer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run web:dev",
    "beforeBuildCommand": "pnpm run web:build"
  },
  "app": {
    "windows": [
      {
        "title": "gaokao-timer",
        "width": 300,
        "height": 200,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "skipTaskbar": true,
        "alwaysOnBottom": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32.jpg",
      "icons/128.jpg",
      "icons/64.jpg",
      "icons/icon.ico"
    ]
  }
}
